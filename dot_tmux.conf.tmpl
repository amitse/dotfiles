# tmux configuration
# Generated by chezmoi - edit the template in your dotfiles repo
# Cross-platform support: Windows, Linux, macOS
#
# Platform-specific features:
# - Clipboard integration (clip.exe/wl-copy/xclip/pbcopy)
# - Hostname display methods
# - Terminal compatibility

# Set prefix key to Ctrl-a (instead of default Ctrl-b)
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix

# Enable mouse support
set -g mouse on

# Set default terminal mode to 256color mode
set -g default-terminal "screen-256color"

# Enable RGB colour if running in xterm(1)
set-option -sa terminal-overrides ",xterm*:Tc"

# Window and pane indexing
set -g base-index 1
setw -g pane-base-index 1

# Automatically renumber windows when one is closed
set -g renumber-windows on

# Set window and pane titles
set-option -g set-titles on
set-option -g set-titles-string '#H:#S.#I.#P #W #T'

# Status bar configuration
set -g status-interval 60
set -g status-left-length 20
set -g status-right-length 140

{{- if eq .chezmoi.os "windows" }}
# Windows-specific settings
set -g status-left '#[fg=green][#S] '
set -g status-right '#[fg=cyan]%Y-%m-%d %H:%M #[fg=green]#H'
{{- else if eq .chezmoi.os "darwin" }}
# macOS-specific settings
set -g status-left '#[fg=green][#S] '
set -g status-right '#[fg=cyan]%Y-%m-%d %H:%M #[fg=green]#(hostname -s)'
{{- else }}
# Linux-specific settings
set -g status-left '#[fg=green][#S] '
set -g status-right '#[fg=cyan]%Y-%m-%d %H:%M #[fg=green]#(hostname -s)'
{{- end }}

# Color scheme
set -g status-style 'bg=colour234 fg=colour137'
set -g window-status-current-style 'bg=colour238 fg=colour81'
set -g window-status-style 'fg=colour138'

# Pane borders
set -g pane-border-style 'fg=colour238'
set -g pane-active-border-style 'fg=colour81'

# Message text
set -g message-style 'bg=colour166 fg=colour232'

# Split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# Reload config file
bind r source-file ~/.tmux.conf \; display-message "Config reloaded!"

# Switch panes using Alt-arrow without prefix
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# Vi mode for copy mode
setw -g mode-keys vi
bind-key -T copy-mode-vi v send-keys -X begin-selection
{{- if eq .chezmoi.os "darwin" }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
{{- else if eq .chezmoi.os "windows" }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "clip.exe"
{{- else }}
# Linux clipboard integration - tries multiple clipboard tools
{{- if lookPath "wl-copy" }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "wl-copy"
{{- else if lookPath "xclip" }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "xclip -in -selection clipboard"
{{- else if lookPath "xsel" }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "xsel --clipboard --input"
{{- else }}
# Fallback: copy to tmux buffer only
bind-key -T copy-mode-vi y send-keys -X copy-selection
{{- end }}
{{- end }}

# History limit
set -g history-limit 10000

# Escape time for vim
set -sg escape-time 0

# Focus events enabled for terminals that support them
set -g focus-events on

# Aggressive resize
setw -g aggressive-resize on