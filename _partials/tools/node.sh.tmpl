# Node.js cleanup utilities
node_cleanup() {
    echo "ğŸ§¹ Node.js Cleanup"
    echo "=================="
    
    # Clean npm cache
    {{- if lookPath "npm" }}
    echo "ğŸ§½ Cleaning npm cache..."
    npm cache clean --force
    {{- end }}
    
    # Clean yarn cache
    {{- if lookPath "yarn" }}
    echo "ğŸ§½ Cleaning yarn cache..."
    yarn cache clean
    {{- end }}
    
    # Remove node_modules if present
    if [ -d "node_modules" ]; then
        echo "ğŸ—‘ï¸  Remove node_modules directory? (y/N)"
        read -r response
        if [[ "$response" =~ ^[Yy]$ ]]; then
            rm -rf node_modules
            echo "âœ… Removed node_modules"
        fi
    fi
    
    # Clean package-lock and yarn.lock conflicts
    if [ -f "package-lock.json" ] && [ -f "yarn.lock" ]; then
        echo "âš ï¸  Found both package-lock.json and yarn.lock"
        echo "Choose which to keep: (1) npm (2) yarn (3) keep both"
        read -r choice
        case $choice in
            1) rm yarn.lock && echo "âœ… Removed yarn.lock" ;;
            2) rm package-lock.json && echo "âœ… Removed package-lock.json" ;;
            *) echo "â„¹ï¸  Keeping both lock files" ;;
        esac
    fi
    
    echo "âœ… Node.js cleanup complete"
}

