# Virtual environment management
venv_create() {
    local env_name="${1:-venv}"
    local python_version="$2"
    
    echo "üèóÔ∏è  Creating virtual environment: $env_name"
    
    if [ -n "$python_version" ]; then
        if command -v "python$python_version" >/dev/null 2>&1; then
            "python$python_version" -m venv "$env_name"
        else
            echo "‚ùå Python $python_version not found"
            return 1
        fi
    else
        $PYTHON_CMD -m venv "$env_name"
    fi
    
    echo "‚úÖ Virtual environment created: $env_name"
    echo "üí° Activate with: source $env_name/bin/activate (Linux/Mac) or $env_name\\Scripts\\activate (Windows)"
}

venv_activate() {
    local env_name="${1:-venv}"
    
    if [ -f "$env_name/bin/activate" ]; then
        source "$env_name/bin/activate"
        echo "‚úÖ Activated virtual environment: $env_name"
    elif [ -f "$env_name/Scripts/activate" ]; then
        source "$env_name/Scripts/activate"
        echo "‚úÖ Activated virtual environment: $env_name"
    else
        echo "‚ùå Virtual environment not found: $env_name"
        return 1
    fi
}

venv_deactivate() {
    if [ -n "$VIRTUAL_ENV" ]; then
        deactivate
        echo "‚úÖ Deactivated virtual environment"
    else
        echo "‚ÑπÔ∏è  No virtual environment active"
    fi
}

venv_remove() {
    local env_name="${1:-venv}"
    
    if [ -d "$env_name" ]; then
        echo "üóëÔ∏è  Removing virtual environment: $env_name"
        rm -rf "$env_name"
        echo "‚úÖ Virtual environment removed: $env_name"
    else
        echo "‚ùå Virtual environment not found: $env_name"
        return 1
    fi
}

venv_list() {
    echo "üìã Virtual Environments in Current Directory"
    echo "==========================================="
    
    # Look for common virtual environment directories
    for dir in venv env .venv .env */venv */env; do
        if [ -d "$dir" ] && [ -f "$dir/pyvenv.cfg" ]; then
            local python_version=$(grep "version" "$dir/pyvenv.cfg" | cut -d' ' -f3)
            echo "  üìÅ $dir (Python $python_version)"
        fi
    done
}

# Package management
pip_list_installed() {
    echo "üì¶ Installed Python Packages"
    echo "============================"
    $PIP_CMD list --format=columns
}

pip_list_outdated() {
    echo "üìä Outdated Python Packages"
    echo "==========================="
    $PIP_CMD list --outdated --format=columns
}

pip_upgrade_all() {
    echo "‚¨ÜÔ∏è  Upgrading all pip packages..."
    
    # Get list of outdated packages
    local outdated=$($PIP_CMD list --outdated --format=freeze | cut -d'=' -f1)
    
    if [ -n "$outdated" ]; then
        echo "$outdated" | xargs -n1 $PIP_CMD install --upgrade
        echo "‚úÖ All packages upgraded"
    else
        echo "‚ÑπÔ∏è  All packages are already up to date"
    fi
}

pip_freeze_requirements() {
    local requirements_file="${1:-requirements.txt}"
    echo "üìÑ Freezing requirements to: $requirements_file"
    $PIP_CMD freeze > "$requirements_file"
    echo "‚úÖ Requirements saved to: $requirements_file"
}

pip_install_from_requirements() {
    local requirements_file="${1:-requirements.txt}"
    
    if [ ! -f "$requirements_file" ]; then
        echo "‚ùå Requirements file not found: $requirements_file"
        return 1
    fi
    
    echo "üì¶ Installing from: $requirements_file"
    $PIP_CMD install -r "$requirements_file"
    echo "‚úÖ Packages installed from: $requirements_file"
}

pip_show_package() {
    local package="$1"
    
    if [ -z "$package" ]; then
        echo "Usage: pip_show_package <package_name>"
        return 1
    fi
    
    echo "üìã Package Information: $package"
    echo "==============================="
    $PIP_CMD show "$package"
}

pip_install_essentials() {
    echo "üîß Installing essential Python packages..."
    
    local essentials=(
        "pip"
        "setuptools"
        "wheel"
        "virtualenv"
        "pipenv"
        "black"
        "flake8"
        "pytest"
        "requests"
        "ipython"
        "jupyter"
    )
    
    for package in "${essentials[@]}"; do
        echo "üì¶ Installing $package..."
        $PIP_CMD install --upgrade "$package"
    done
    
    echo "‚úÖ Essential packages installed"
}

