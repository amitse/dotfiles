# Cleanup utilities
python_cleanup() {
    echo "üßπ Python Cleanup"
    echo "================="
    
    # Clean __pycache__ directories
    echo "üóëÔ∏è  Removing __pycache__ directories..."
    find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null
    find . -name "*.pyc" -delete 2>/dev/null
    find . -name "*.pyo" -delete 2>/dev/null
    echo "‚úÖ Python cache cleaned"
    
    # Clean pip cache
    echo "üßΩ Cleaning pip cache..."
    $PIP_CMD cache purge
    echo "‚úÖ Pip cache cleaned"
    
    # Clean build artifacts
    if [ -d "build" ]; then
        rm -rf build
        echo "‚úÖ Build directory removed"
    fi
    
    if [ -d "dist" ]; then
        rm -rf dist
        echo "‚úÖ Dist directory removed"
    fi
    
    find . -name "*.egg-info" -type d -exec rm -rf {} + 2>/dev/null
    echo "‚úÖ Egg-info directories removed"
    
    echo "‚úÖ Python cleanup complete"
}

