# Secrets Environment File
# This file is managed by chezmoi and uses the secrets management system
# 
# Supported secret backends:
# - 1Password: op://vault/item/field
# - Bitwarden: bw://item-id/field  
# - Environment variables: env://VARIABLE_NAME
# - File-based secrets: file://path/to/secret
#
# Examples based on your profile:

{{- if .data.features.github_integration }}
# GitHub Integration
GITHUB_TOKEN="{{ template "secret" "env://GITHUB_TOKEN" }}"
GH_TOKEN="${GITHUB_TOKEN}"
{{- end }}

{{- if eq .data.profile "developer" }}
# Development Environment Secrets
DATABASE_URL="{{ template "secret" "env://DATABASE_URL" }}"
API_BASE_URL="{{ template "secret" "env://API_BASE_URL" }}"
{{- end }}

{{- if eq .data.profile "power-user" }}
# Advanced/Production Secrets
AWS_ACCESS_KEY_ID="{{ template "secret" "env://AWS_ACCESS_KEY_ID" }}"
AWS_SECRET_ACCESS_KEY="{{ template "secret" "env://AWS_SECRET_ACCESS_KEY" }}"
AWS_DEFAULT_REGION="{{ template "secret" "env://AWS_DEFAULT_REGION" }}"

# Docker Hub
DOCKER_USERNAME="{{ template "secret" "env://DOCKER_USERNAME" }}"
DOCKER_PASSWORD="{{ template "secret" "env://DOCKER_PASSWORD" }}"

# Kubernetes
KUBECONFIG="{{ template "secret" "env://KUBECONFIG" }}"
{{- end }}

# To migrate to 1Password, change env:// URLs to op:// format:
# Example: {{ template "secret" "op://Personal/GitHub Token/credential" }}
# 
# To migrate to Bitwarden, change env:// URLs to bw:// format:
# Example: {{ template "secret" "bw://github-token/password" }}
#
# To use file-based secrets:
# Example: {{ template "secret" "file://~/.secrets/github_token" }}
